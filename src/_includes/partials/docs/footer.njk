{% if collections.docs %}
  {% set nextPrevItems = collections.menu | getNextPrevMenu(page.url) %}
  {% set previousDoc = nextPrevItems.previous %}
  {% set nextDoc = nextPrevItems.next %}
  {% if nextDoc or previousDoc %}
    <footer class="flex gap-x-4 mt-8 pt-4 border-t border-neutral-200 dark:border-neutral-750">
      {% if previousDoc %}
        <a href="{{ previousDoc.url}}" class="btn truncate">
          {% lucide "arrow-left", { "class": "h-4 w-4 shrink-0" } %}
          <span class="max-w-1/2 truncate">{{ previousDoc.title }}</span>
        </a>
      {% endif %}
      {% if nextDoc %}
        <a href="{{ nextDoc.url}}" class="btn ml-auto truncate">
          <span class="max-w-1/2 truncate">{{ nextDoc.title }}</span>
          {% lucide "arrow-right", { "class": "h-4 w-4 shrink-0" } %}
        </a>
      {% endif %}
      </footer>
  {% endif %}
{% endif %}